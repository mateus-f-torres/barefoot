[version]
0.91.0

[ignore]
# <PROJECT_ROOT>/node_modules/{module}
<PROJECT_ROOT>/node_modules/polished/

[lints]
# all=off by default
sketchy-null=warn
sketchy-number=warn
untyped-import=warn
unclear-type=warn
unsafe-getters-setters=warn

[options]
# ignore next line flow error
suppress_comment= \\(.\\|\n\\)*\\$FlowFixMe

# ignore style files
# module.name_mapper='.*\(.scss\)$' -> '<PROJECT_ROOT>/__mocks__/fileMock.js'

# add module wrappers for webpack alias
module.name_mapper='^Stores/\(.*\)$' -> '<PROJECT_ROOT>/src/stores/\1'
module.name_mapper='^Views/\(.*\)$' -> '<PROJECT_ROOT>/src/views/\1'
module.name_mapper='^Assets/\(.*\)$' -> '<PROJECT_ROOT>/src/assets/\1'
module.name_mapper='^Types/\(.*\)$' -> '<PROJECT_ROOT>/src/types/\1'
module.name_mapper='^Mocks/\(.*\)$' -> '<PROJECT_ROOT>/__mocks__/\1'
