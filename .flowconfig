[version]
0.94.0

[ignore]
# ignore i18next resources
<PROJECT_ROOT>/src/assets/translations/*.json

[lints]
# all=off by default
sketchy-null=warn
sketchy-number=warn
untyped-import=warn
unclear-type=warn
unsafe-getters-setters=warn

[options]
# ignore next line flow error
suppress_comment= \\(.\\|\n\\)*\\$FlowFixMe

# mock style files
# module.name_mapper='.*\(.scss\)$' -> '<PROJECT_ROOT>/__mocks__/fileMock.js'

# add module wrappers for webpack alias
module.name_mapper='^assets/\(.*\)$' -> '<PROJECT_ROOT>/src/assets/\1'
module.name_mapper='^components/\(.*\)$' -> '<PROJECT_ROOT>/src/components/\1'
module.name_mapper='^containers/\(.*\)$' -> '<PROJECT_ROOT>/src/containers/\1'
module.name_mapper='^ducks/\(.*\)$' -> '<PROJECT_ROOT>/src/ducks/\1'
module.name_mapper='^tests/\(.*\)$' -> '<PROJECT_ROOT>/src/tests/\1'
module.name_mapper='^types/\(.*\)$' -> '<PROJECT_ROOT>/src/types/\1'
module.name_mapper='^utils/\(.*\)$' -> '<PROJECT_ROOT>/src/utils/\1'
