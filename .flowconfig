[ignore]
# <PROJECT_ROOT>/node_modules/{module}

[include]

[libs]

[lints]
# all=off by default
sketchy-null=warn
untyped-import=warn
unclear-type=warn

[options]
# ignore next line flow error
suppress_comment= \\(.\\|\n\\)*\\$FlowFixMe

# add module wrappers for webpack alias
module.name_mapper='^Store/\(.*\)$' -> '<PROJECT_ROOT>/src/store/\1'
module.name_mapper='^Components/\(.*\)$' -> '<PROJECT_ROOT>/src/components/\1'
module.name_mapper='^Types/\(.*\)$' -> '<PROJECT_ROOT>/types/\1'
module.name_mapper='^Mocks/\(.*\)$' -> '<PROJECT_ROOT>/__mocks__/\1'

[strict]
