{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "node": true,
    "worker": true
  },
  "globals": {
    "PRODUCTION": "readonly",
    "PUSHER_INSTANCE_ID": "readonly"
  },
  "plugins": [
    "@typescript-eslint",
    "react"
  ],
  "settings": {
    "import/resolver":  "node",
    "react": {
      "version": "detect"
    }
  },
  "extends": [
    "standard",
    "standard-with-typescript",
    "plugin:react/recommended",
    "prettier"
  ]
}
